{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsSample",
  "title": "Generate Sample File",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name for the sample file.",
      "$default": {
        "$source": "argv",
